{
  "manifest_version": 3,
  "name": "LinkedIn Assistant",
  "version": "1.0",
  "description": "Generate messages and comments for LinkedIn",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://hook.eu2.make.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
